source "https://rubygems.org"

# Core requirements
gem "github-pages", "~> 232", group: :jekyll_plugins

# Essential plugins (included in github-pages gem)
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-paginate-v2" # For your review pagination
end

# Development tools
group :development do
  gem "webrick" # Required for Jekyll 4.0+ local serving
  gem "jekyll-watch" # Auto-regeneration
end